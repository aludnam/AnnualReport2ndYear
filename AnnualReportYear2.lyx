\uuline off
\uwave off
\noun off
\color none
\begin_inset Formula 
\begin{equation}
I(\theta)=\sum_{i=1}^{4}p(\bm{\Lambda}^{i})\sum_{p=1}^{N}\frac{1}{\lambda_{p}(\theta,\bm{\Lambda}^{i})}\left(\frac{\partial\lambda_{p}(\theta,\bm{\Lambda}^{i})}{\partial\theta}\right)^{2},\label{eq:Fisher Information Blinking Cheating}
\end{equation}

\end_inset


